<Page x:Class="Classification.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Classification"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="물류_분류시스템">

    
    <StackPanel x:Name="LoginPanel" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,20,0,0" Grid.Row="0">
        <Label Content="관리자 ID" Width="80" HorizontalContentAlignment="Right" Margin="160,0,0,0"/>
        <TextBox Width="100"/>
        <Label Content="비밀번호" Width="80" HorizontalContentAlignment="Right"/>
        <TextBox Width="100"/>
        <Button x:Name="login" Content="로그인" Width="80" Click="login_Click"/>
    </StackPanel>
    
</Page>
