<Page x:Class="Classification.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Classification"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="MainPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <TextBlock Text="관리자 : admin" Margin="330,0,10,0"/>
            <Button x:Name="StartWork" Content="업무시작" Click="StartWork_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,10,0,0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="LoadedImage" Width="300" Height="390" Stretch="Uniform" />
                <StackPanel Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="130"/>
                            <RowDefinition Height="130"/>
                            <RowDefinition Height="130"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="대분류"/>
                        <TextBlock Text="중분류" Grid.Row="1"/>
                        <TextBlock Text="소분류" Grid.Row="2"/>
                    </Grid>

                </StackPanel>
            </Grid>
        </StackPanel>

    </Grid>
</Page>
